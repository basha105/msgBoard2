const Router = require('express');
const indexRouter = Router();
const indexController = require('../controllers/indexController');

indexRouter.get("/", (req, res) => indexController.displayMessages);
indexRouter.get("/new", (req, res) => res.render("form"));
indexRouter.post("/new", (req, res) => indexController.addMessage);
indexRouter.get("/message/:id", (req, res) => indexController.displayMessageContent);

module.exports = indexRouter;